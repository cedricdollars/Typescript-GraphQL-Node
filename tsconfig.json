{
  "compilerOptions": {
    "watch": true,
    "target": "es5",
    "module": "commonjs",
    "lib": ["es5", "ES6"],
    "outDir": "dist",
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "paths": {
      "@tests/*": ["./tests/*"],
      "@/*": ["*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true
  },
  "include": ["./src/**/*", "tests/**/*"],
  "exclude": ["./node_modules/"]
}
